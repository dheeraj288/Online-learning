<header class="hidden sm:flex w-full justify-center items-center bg-white text-gray-700 py-6 px-5 shadow-lg">
  <div class="container mx-auto flex justify-between items-center">
    <div class="flex">
      <%= link_to "Courses", root_path, class: "hover:bg-red-500 hover:text-white rounded py-2 px-4 transition duration-300 ease-in-out" %>
    </div>
    <div>
      <%= link_to root_path do %>
        <%= image_tag "logo.jpg", class: "h-12" %>
      <% end %>
    </div>
    <div class="flex items-center space-x-4">
      <% if user_signed_in? %>
        <%= link_to "Sign Out", destroy_user_session_path, data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "hover:bg-red-500 hover:text-white rounded py-2 px-4 transition duration-300 ease-in-out" %>
        <%= link_to icon('fa-solid', 'user-circle'), edit_user_registration_path, class: "hover:bg-red-500 hover:text-white rounded py-2 px-4 text-center transition duration-300 ease-in-out" %>
      <% else %>
        <%= link_to "Sign In", new_user_session_path, class: "hover:bg-red-500 hover:text-white rounded py-2 px-4 transition duration-300 ease-in-out" %>
      <% end %>
    </div>
  </div>
</header>

<header data-controller="navbar" class="bg-red-500 sm:hidden w-full py-4 px-5 text-white shadow-lg">
  <div class="flex justify-between items-center">
    <%= link_to root_path do %>
      <%= image_tag "logo.jpg", class: "h-12" %>
    <% end %>
    <button data-action="click->navbar#toggle" type="button" class="w-full flex justify-end items-center">
      <%= icon('fa-solid', 'bars') %>
    </button>
  </div>
  <div id="mobile-links" class="hidden border-t-2 border-red-400 flex flex-col w-full justify-center items-center mt-4 space-y-4">
    <%= link_to "Courses", root_path, class: "hover:bg-red-700 rounded py-2 px-4 transition duration-300 ease-in-out" %>
    <% if user_signed_in? %>
      <%= link_to "Sign Out", destroy_user_session_path, data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "hover:bg-red-500 hover:text-white rounded py-2 px-4 transition duration-300 ease-in-out" %>
      <%= link_to icon('fa-solid', 'user-circle'), edit_user_registration_path, class: "hover:bg-red-500 hover:text-white rounded py-2 px-4 text-center transition duration-300 ease-in-out" %>
    <% else %>
      <%= link_to "Sign In", new_user_session_path, class: "hover:bg-red-500 hover:text-white rounded py-2 px-4 transition duration-300 ease-in-out" %>
    <% end %>
  </div>
</header>

