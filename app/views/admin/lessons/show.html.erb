<div class="flex flex-col justify-start items-center w-full">
  <p style="color: green"><%= notice %></p>

  <%= render @admin_lesson %>

  <div class="mt-4 flex justify-center items-center gap-2">
    <%= link_to "Edit this lesson", edit_admin_course_lesson_path(@admin_course, @admin_lesson), class: "bg-red-500 hover:bg-red-600 cursor-pointer px-4 py-2 rounded text-white-50" %>
    <%= link_to "Back to lessons", admin_course_lessons_path, class: "bg-blue-500 hover:bg-blue-600 cursor-pointer px-4 py-2 rounded text-gray-50" %>

    <%= button_to "Destroy this lesson", [:admin, @admin_course, @admin_lesson], method: :delete, class: "bg-red-500 hover:bg-red-600 cursor-pointer px-4 py-2 rounded text-gray-50", data: {'turbo-confirm': "Are you sure?"} %>
  </div>
</div>
